<h1>Listing Mentor Users</h1>

<% if user_signed_in? &&  current_user.admin = 'true' %>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Studies level</th>
    <th>Field</th>
    <th></th>
