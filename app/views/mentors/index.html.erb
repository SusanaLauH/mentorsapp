<% @mentors.each do |mentor| %>
  <tr>
    <td><%= mentor.name %></td>
    <td><%= mentor.email %></td>
    <td><%= mentor.phone %></td>
    <td><%= mentor.studies_level %></td>
    <td><%= mentor.field_study %></td>

    <td><%= link_to 'Show', mentor %></td>
