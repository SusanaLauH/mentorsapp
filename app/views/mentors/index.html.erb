<h1>Listing Mentor Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Studies level</th>
    <th>Field</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mentors.each do |mentor| %>
  <tr>
    <td><%= mentor.name %></td>
    <td><%= mentor.email %></td>
    <td><%= mentor.phone %></td>
    <td><%= mentor.studies_level %></td>
    <td><%= mentor.field_study %></td>

    <td><%= link_to 'Show', mentor %></td>

    <% if admin? %>
    <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
    <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>

<% end %>
</table>
